<!DOCTYPE html>
<html>

<head>
  <% include ./head %>
    <link rel="stylesheet" href="/stylesheets/carousel.css" />
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <script src="/js/scripts.js"></script>
</head>

<body>
  <header>
    <% include ./header %>
  </header>
  <div id="upper">

    <% if (typeof signinSuccess === "undefined") { %>
      <form class="form" method="POST" action="/">
        <div class="sign-in-container">
          <!-- <div class="row"> -->
            <!-- <div class="col-md-4"> -->
              <input class="email__input" name="email" type="email" placeholder="Email" required />
            <!-- </div> -->
            <!-- <div class="col-md-4"> -->
              <input class="password__input" name="password" type="password" placeholder="Password" required />
            <!-- </div> -->
            <!-- <div class="col-md-2"> -->
              <button type="submit" id="log-in">SIGN IN</button>
            <!-- </div> -->
            <!-- <div class="col-md-2"> -->
              <button id="sign-up">SIGN UP</button>
            </div>
          <!-- </div> -->
        <!-- </div> -->
      </form>
      <% } %>

        <% if (typeof signinSuccess !== "undefined") { %>
          <button id="wishlist-btn"><a class="wishlist__a" href="/wishlist">WISHLIST</a></button>
          <% } %>

            <div class="nav-bar">
              <button class="nav-bar__btn"><a href="./results/atq" id="category-redirect">ANTIQUES</a></button>
              <button class="nav-bar__btn"><a href="./results/bks" id="category-redirect">BOOKS</a></button>
              <button class="nav-bar__btn"><a href="./results/clt" id="category-redirect">COLLECTIBLES</a></button>
              <button class="nav-bar__btn"><a href="./results/vgm" id="category-redirect">VIDEO GAMES</a></button>
            </div>
  </div>
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="first-slide" src="../images/antiques_carousel.jpg" alt="First slide">
        <div class="container carousel-item__bg">
          <div class="carousel-caption text-left" id="carousel-caption">
            <h1 class="carousel-item__h1">ANTIQUES</h1>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img class="second-slide" src="../images/books_carousel.jpg" alt="Second slide">
        <div class="container">
          <div class="carousel-caption" id="carousel-caption">
            <h1 class="carousel-item__h1">BOOKS</h1>
            <p></p>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img class="third-slide" src="../images/video_game_carousel.png" alt="Third slide">
        <div class="container">
          <div class="carousel-caption text-right" id="carousel-caption">
            <h1 class="carousel-item__h1">VIDEO GAMES</h1>
            <p></p>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img class="fourth-slide" src="../images/collectibles_carousel.jpg" alt="Fourth slide">
        <div class="container">
          <div class="carousel-caption" id="carousel-caption">
            <h1 class="carousel-item__h1">COLLECTIBLES</h1>
            <p></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container marketing">
    <main id="lower" role="main">
      <div class="container">
        <!-- Three columns of text below the carousel -->
        <div class="row">
          <div class="col-lg-4">
            <h2>CATEGORIES</h2>
            <div class="container">
              <ul class="category__ul">
                <li><a href="./results/atq" class="category__li">Antiques</a></li>
                <li><a href="./results/bks" class="category__li">Books</a></li>
                <li><a href="./results/clt" class="category__li">Collectibles</a></li>
                <li><a href="./results/vgm" class="category__li">Video Games</a></li>
              </ul>
            </div>
          </div>
          <div class="col-lg-4">
            <h2>ABOUT US</h2>
            <p class="about-us__p"><a href="./about_us.html" target="_blank" class="community__a">Our Team</a></p>
          </div>
          <div class="col-lg-4">
            <h2>COMMUNITY</h2>
            <p class="community__p"><a href="../community.html" target="_blank" class="community__a">Coming Soon!</a></p>
          </div>
        </div>
      </div>
    </main>
  </div>

  <footer>
    <% include ./footer %>
  </footer>

</body>

</html>
