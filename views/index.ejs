<!DOCTYPE html>
<html>
  <head>
      <% include ./head %>
      <link rel='stylesheet' href='/stylesheets/style.css'/>
      <link rel='stylesheet' href='/stylesheets/carousel.css'/>
  </head>
  <body>
    <header>
      <% include ./header %>
    </header>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="first-slide" src="../images/antiques_carousel.jpeg" alt="First slide">
          <div class="container">
            <div class="carousel-caption text-left">
              <h1>Antiques</h1>
              <p></p>
            </div>
          </div>
        </div>
        <div class="carousel-item">
          <img class="second-slide" src="../images/books_carousel.jpg" alt="Second slide">
          <div class="container">
            <div class="carousel-caption">
              <h1>Books</h1>
              <p></p>
            </div>
          </div>
        </div>
        <div class="carousel-item">
          <img class="third-slide" src="../images/video_game_carousel.png" alt="Third slide">
          <div class="container">
            <div class="carousel-caption text-right">
              <h1>Video Gaming</h1>
              <p></p>
            </div>
          </div>
        </div>
        <div class="carousel-item">
          <img class="fourth-slide" src="../images/collectibles_carousel.png" alt="Fourth slide">
          <div class="container">
            <div class="carousel-caption">
              <h1>Collectibles</h1>
              <p></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Testing result card layout -->
    <main role="main">
    <article class="card">
          <div class="top-line"></div>
          <div class="bottom-line">
            <h3 class="product-title">Title</h3>
            <h4 class="product-price">$$$</h4>
            <button class="product-url"><a class="card-url" title="attachment-link" target="_blank" href="https://seattle.craigslist.org/oly/atq/d/vintage-copper-canisters-make/6552292985.html">More details...</a></button>
            <button class="wishlist-btn">Add to Wishlist</button>
          </div>
        </article>
    </main>

    <footer>
      <% include ./footer %>
    </footer>

</body>
