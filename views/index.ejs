<!DOCTYPE html>
<html>

<head>
  <% include ./head %>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/carousel.css' />
    <link rel='stylesheet' href='/stylesheets/index.css' />
    <script src = '/js/scripts.js'></script>
</head>

<body>
  <header>
    <% include ./header %>
  </header>
  <div id="upper">
    <% if (typeof signinSuccess === 'undefined') { %>
      <form class="form" method="POST" action="/">
        <div class="container">
          <div class="row">
            <div class="col-md-4">
              <input class="form-control" name="email" type="text" placeholder="Email" required />
            </div>
            <div class="col-md-4">
              <input class="form-control" name="password" type="password" placeholder="Password" required />
            </div>
            <div class="col-md-2">
              <button type="submit" id='log-in'>Log-in</button>
            </div>
            <div class="col-md-2">
              <button id="sign-up">Sign-up</button>
            </div>
          </div>
        </div>
      </form>
    <% } %>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <button class="nav">Antiqes</button>
        </div>
        <div class="col-md-3">
          <button class="nav">Books</button>
        </div>
        <div class="col-md-3">
          <button class="nav">Collectibles</button>
        </div>
        <div class="col-md-3">
          <button class="nav">Video Games</button>
        </div>
      </div>
    </div>
  </div>
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="first-slide" src="../images/antiques_carousel.jpeg" alt="First slide">
        <div class="container">
          <div class="carousel-caption text-left">
            <h1>Antiques</h1>
            <p></p>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img class="second-slide" src="../images/books_carousel.jpg" alt="Second slide">
        <div class="container">
          <div class="carousel-caption">
            <h1>Books</h1>
            <p></p>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img class="third-slide" src="../images/video_game_carousel.png" alt="Third slide">
        <div class="container">
          <div class="carousel-caption text-right">
            <h1>Video Games</h1>
            <p></p>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img class="fourth-slide" src="../images/collectibles_carousel.png" alt="Fourth slide">
        <div class="container">
          <div class="carousel-caption">
            <h1>Collectibles</h1>
            <p></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Testing result card layout -->
  <main id="lower" role="main">
    <div class="container">
      <!-- Three columns of text below the carousel -->
      <div class="row">
        <div class="col-lg-4">
          <h2>Catagories</h2>
            <div class="container">
              <div class="row">
                <div class="col-md-12">
                  <button class="catagory">Antiques</button>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <button class="catagory">Books</button>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <button class="catagory">Collectibles</button>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <button class="catagory">Video Games</button>
                </div>
              </div>
              </div>
          </div>

        <!-- /.col-lg-4 -->
        <div class="col-lg-4">
          <h2>About Us</h2>
          <button>Click Here</button>
        </div>
        <!-- /.col-lg-4 -->
        <div class="col-lg-4">
          <h2>Community</h2>
          <p>Coming Soon!</p>
          <button>Click Here</button>
        </div>
        <!-- /.col-lg-4 -->
      </div>
    </div>
      <!-- /.row -->
  </main>

  <footer>
    <% include ./footer %>
  </footer>

</body>

</html>
