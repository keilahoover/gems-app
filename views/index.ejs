<!DOCTYPE html>
<html>

<head>
  <% include ./head %>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/carousel.css' />
    <!-- <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script> -->
    <script src='/js/scripts.js'></script>
</head>

<body>
  <header>
    <% include ./header %>
  </header>
  <div id=logIn>
    <div class="input-field">
      <input placeholder="Email" id="email" type="text" class="validate">
    </div>
    <div class="input-field">
      <input placeholder="Password" id="password" type="password" class="validate">
    </div>
    <button class="input-field waves-effect waves-light btn-large" type="submit" name="action">Log in</button>
  </div>
  <a href="registration.ejs" class='button'>Register</a>
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="first-slide" src="../images/antiques_carousel.jpeg" alt="First slide">
        <div class="container">
          <div class="carousel-caption text-left">
            <h1>Antiques</h1>
            <p></p>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img class="second-slide" src="../images/books_carousel.jpg" alt="Second slide">
        <div class="container">
          <div class="carousel-caption">
            <h1>Books</h1>
            <p></p>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img class="third-slide" src="../images/video_game_carousel.png" alt="Third slide">
        <div class="container">
          <div class="carousel-caption text-right">
            <h1>Video Gaming</h1>
            <p></p>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img class="fourth-slide" src="../images/collectibles_carousel.png" alt="Fourth slide">
        <div class="container">
          <div class="carousel-caption">
            <h1>Collectibles</h1>
            <p></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Testing result card layout -->
  <main role="main">

  </main>

  <footer>
    <% include ./footer %>
  </footer>

</body>

</html>
